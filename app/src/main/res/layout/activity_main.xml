<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jetslice.referncert.MainActivity">

<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.2"

    android:background="@color/orange_salmon"
    android:alpha="0.8">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ReferNcert"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        />
</android.support.v7.widget.Toolbar>

    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="100dp"
        android:layout_weight="1"
        app:cardCornerRadius="5dp"

        android:background="#cb170f0f">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView

            android:id="@+id/recent_book"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:scaleType="fitXY"
            android:src="@drawable/book_recent_image"
            android:text="RecentBook"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Recent Book"
            android:textColor="@color/orange_salmon"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:textSize="25sp"
            />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:elevation="100dp"
    android:background="@color/orange_salmon">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
    <ImageView
        android:id="@+id/open_lib"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:src="@drawable/allbooks"

      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="All Books"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/orange_salmon"
        android:layout_gravity="center"
   />
    </LinearLayout>
</android.support.v7.widget.CardView>








</LinearLayout>
